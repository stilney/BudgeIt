<html>
<head>

	<link rel="stylesheet" href="css/boostrap.min.css">
	<link rel="stylesheet" href="css/override.css">

	<title>Budge-It!</title>

</head>
<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">Budge-It!</a>
		</div>
	</nav>

	<div class="generalpadding"></div>

	<div class="container">
		<form>
			<div class="panel panel-default">
				<div class="panel-body">
					<h3 class="center-text">Sign In</h3><br>
					<div class="form-group row">
						<label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
						<div class="col-sm-10">
							<input type="email" class="form-control" id="inputEmail" placeholder="Email">
						</div>
					</div>

					<form class="form-inline" id="addExpenseForm" role="form" action="/overview">
					<div class="form-group row">
						<label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
						<div class="col-sm-10">
							<input type="password" class="form-control" id="inputPassword" placeholder="Password">
						</div>
					</div>
					<div class="form-group row">
						<div class="col-xs-3">
						</div>
						<div class="col-sm-1">
							<a type="submit" class="btn btn-primary buttonCenter" href='/overview'>Sign in</a>
						</div>
						<div class="col-xs-2">
						</div>
						<div class="col-xs-2">
							<button type="submit" class="btn btn-primary">Sign Up</button>
						</div>
						<div class="col-xs-3">
						</div>
					</div>
					</form>

				</div>
			</div>
		</form>
	</div>

	<!-- So page doesn't cut off before the footer menu -->
	<div class="generalpadding"></div>

	<!-- Footer menu -->
	<div class="col-xs-12 fullwidth bottom">
		<div class="btn-group btn-group-justified">
			<a href="overview" class="btn btn-default">
				<span class="glyphicon glyphicon-th-list"></span><br>
				Overview
			</a>
			<a href="expenses" class="btn btn-default">
				<span class="glyphicon glyphicon-usd"></span><br>
				Expenses
			</a>
			
			<a href="wishlist" class="btn btn-default">
				<span class="glyphicon glyphicon-star"></span><br>
				Wishlist
			</a>
		</div>
	</div>

</body>
</html>