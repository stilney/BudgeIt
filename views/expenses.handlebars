<html>
<head>
	<link rel="stylesheet" href="css/boostrap.min.css">
	<link rel="stylesheet" href="css/override.css">

	<title>Budge-It!</title>
</head>
<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">Budge-It!</a>
		</div>
	</nav>

	<!-- So page doesnt begin behind the navbar -->
	<div class="generalpadding"></div>

	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<h3 class="center-text">Expenses</h3><br>
						<a href="#" class="btn btn-success btn-lg btn-block">New Expense</a> <br>
						<ul class="list-group">
							<li class="list-group-item active-title">
								<span class="badge badge-expense">$20 Left / $2000</span>
								<b>Food</b>
							</li>
							{{#each food}}
							<li class="list-group-item">
								&nbsp; {{name}}: ${{price}}
							</li>
							{{/each}}
							
							<li class="list-group-item active-title">
								<span class="badge badge-expense">$0 Left / $2000</span>
								<b>Bills</b>
							</li>
							<li class="list-group-item">
								&nbsp; 1. Internet
							</li>
							<li class="list-group-item">
								&nbsp; 2. Gas / Electric
							</li>
							<li class="list-group-item active-title">
								<span class="badge badge-expense">$100 Left / $500</span>
								<b>Travel</b>
							</li>
							<li class="list-group-item">
								&nbsp; 1. Uber
							</li>
							<li class="list-group-item">
								&nbsp; 2. Gasoline
							</li>
							<li class="list-group-item active-title">
								<span class="badge badge-expense">$100 Left / $500</span>
								<b>Luxury</b>
							</li>
							<li class="list-group-item">
								&nbsp; 1. Pencil
							</li>
							<li class="list-group-item">
								&nbsp; 2. Automated Drone
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- So page doesn't cut off before the footer menu -->
	<div class="generalpadding"></div>

	<!-- Footer menu -->
	<div class="col-xs-12 fullwidth bottom">
		<div class="btn-group btn-group-justified">
			<a href="/" class="btn btn-default">
				<span class="glyphicon glyphicon-th-list"></span><br>
				Overview
			</a>
			<a href="expenses" class="btn btn-default active">
				<span class="glyphicon glyphicon-usd"></span><br>
				Expensess
			</a>
			<a href="budget" class="btn btn-default">
				<span class="glyphicon glyphicon-object-align-bottom"></span><br>
				Budget
			</a>
			<a href="wishlist" class="btn btn-default">
				<span class="glyphicon glyphicon-star"></span><br>
				Wishlist
			</a>
		</div>
	</div>

</body>
</html>