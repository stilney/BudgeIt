<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/boostrap.min.css">
	<link rel="stylesheet" href="css/override.css">

	<title>Budge-It!</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	 <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
  $( function() {
    $( "#dialog" ).dialog({
      autoOpen: false,
      show: {
        effect: "blind",
        duration: 1000
      },
      hide: {
        effect: "explode",
        duration: 1000
      }
    });
 
    $( "#addWishlist" ).on( "click", function() {
      $( "#dialog" ).dialog( "open" );
    });
  } );
  </script>

</head>
<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="navbar-header">
			<img src="img/logo.png" height="30px"/>
		</div>
	</nav>

	<div class="generalpadding"></div>

	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<h3 class="center-text">Wishlist</h3><br>

						<button class="btn btn-success btn-lg btn-block" id="addWishlist">Add item to Wishlist</button>
						<div id="dialog" title="Add Item to Wishlist">
						<form class="form-inline" id="addExpenseForm" role="form" method="get" action="/addWish">
						  <div class="form-group">
						  	<input type="text" class="form-control" id="name" placeholder="Name" name="name" required="">
						  </div>
						  <div class="form-group">
						    <input type="number" step=".01" class="form-control" id="price" placeholder="Price" name="price" required>
						  </div>
							
						  <button type="submit" class="btn btn-success btn-lg btn-block">Add</button>
						</form>
						</div>
					</div>
				</div>
			</div>
		</div>

		{{#if wishlist}}

    {{#each wishlist}}
    <table class="no-padding table table-bordered">
      <tr>
        <td class="{{recommend}}" width="60px">
          <div class="wishlist-rec">
          </div>
        </td>
        <td width="100%">
          <b>{{name}}</b> (${{price}}) <br>
        </td>
				<!--
				<td height="60px">
					<a class="btn btn-default wishlist-rec-button" href="#" role="button">Mark as Bought</a>
				</td>
			-->
      </tr>
    </table>


    {{/each}}

		{{else}}
		<div class="panel panel-default">
			<div class="panel-body text-center">
				<h3>Wishlist empty.</h3>
			</div>
		</div>
		{{/if}}

	</div>

	<!-- So page doesn't cut off before the footer menu -->
	<div class="generalpadding"></div>

	<!-- Footer menu -->
	<div class="col-xs-12 fullwidth bottom">
		<div class="btn-group btn-group-justified">
			<a href="overview" class="btn btn-default">
				<span class="glyphicon glyphicon-th-list"></span><br>
				Overview
			</a>
			<a href="expenses" class="btn btn-default">
				<span class="glyphicon glyphicon-usd"></span><br>
				Expenses
			</a>

			<a href="wishlist" class="btn btn-default active">
				<span class="glyphicon glyphicon-star"></span><br>
				Wishlist
			</a>
		</div>
	</div>

	<script type="text/javascript" src="./js/wish.js"></script>
</body>
</html>
